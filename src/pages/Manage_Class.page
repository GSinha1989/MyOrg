<apex:page Controller="EditDeleteClass">
    <apex:pageBlock Title="Ajax Sample">
        Hello <b> {!$User.FirstName}</b>.
        <apex:form > 
            
            <apex:pageBlock title="Main Processing of class">
                <apex:dataTable value="{!Data}" var="a" >
                <apex:column value="{!a.Name}" />
                <apex:column >
                    <apex:commandLink action="{!EditClass}"  rerender="display" onclick="ender('invis')">Edit
                        <apex:param value="{!a.Id}" name="idToDel" assignTo="{!SelectedClasslId}"/>
                    </apex:commandLink>
                    <apex:commandLink action="{!DeleteClass}" onclick="if(!confirm('Are you sure?')) return false;">Del
                        <apex:param value="{!a.Id}" name="idToDel" assignTo="{!SelectedClasslId}"/>
                    </apex:commandLink>
                </apex:column>
            </apex:dataTable>
            </apex:pageBlock>
            <div id = "invis" style="display:none;">
                <apex:pageBlock title="Show the details" id="display">
       <br/>
                Board       <apex:inputText value="{!ins.Board__c}"/>
            <br/>
            
                    Name    <apex:inputText value="{!ins.NameCustom__c}"/>
                <br/>
                    Fees    <apex:inputText value="{!ins.Fee__c}"/>
                <apex:commandButton action="{!updateRecord}" value="save"/>
                </apex:pageBlock>
            </div>
    </apex:form>
</apex:pageBlock>
  <script>
    function ender(target){
        alert("Show the spirt");
        if(document.getElementById(target).style.display != 'block')
        document.getElementById(target).style.display = 'block';
        else
        document.getElementById(target).style.display = 'none';
    }
function show(target){
document.getElementById(target).style.display = 'block';
document.getElementById("clickMeId").style.display = 'none';
}
function hide(target){
document.getElementById(target).style.display = 'none';
document.getElementById("clickMeId").style.display = 'block';
}

 </script>
</apex:page>